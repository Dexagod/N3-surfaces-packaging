@prefix pack: <https://example.org/ns/package#>.


# Filter on pack:packagedBy
(
    _:Graffiti _:Graffiti2 _:Graffiti3
    _:PackageGraph
    _:PackageContextGraph
    _:PackageContentGraph
    _:SCOPE
    _:AssertedGraph
) log:onNegativeSurface {
    _:Graffiti pack:package _:PackageGraph.

    _:PackageGraph log:includes {
        _:Graffiti2 pack:context _:PackageContextGraph.
        _:Graffiti3 pack:content _:PackageContentGraph.
    }.

    (
        {
            _:PackageContextGraph log:includes {
                pack:contextGraph pack:packagedBy :Ruben.
            }.
        } {
            # Add full package to results
            _:AssertedGraph log:equalTo {
                () pack:onResultSurface _:PackageContentGraph.
            }.
        } {
            # Dive deeper into the contents to look for packages we can return
            _:AssertedGraph log:equalTo _:PackageContentGraph.
        }
    ) log:ifThenElseIn _:SCOPE.

    () log:onNegativeSurface _:AssertedGraph.
}.